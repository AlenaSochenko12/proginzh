<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fone_categorii"
    tools:context=".presentation.addpointfragment.AddPointFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:id="@+id/back_fone_tochki"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_radius">

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/kyiv_type_sans_regular"
            android:padding="10dp"
            android:text="@string/SeaFood"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#000FFFFF"
            android:contentDescription="@string/back"
            android:foreground="@drawable/baseline_arrow_back_ios_new_24"
            tools:ignore="TouchTargetSizeCheck" />

    </FrameLayout>
    <ScrollView
        android:id="@+id/scroll_SeaFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="380dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginTop="20dp"
                android:src="@drawable/zuma_button" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="380dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginTop="5dp"
                android:src="@drawable/zuma_button" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="380dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginTop="5dp"
                android:src="@drawable/zuma_button" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="380dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginTop="5dp"
                android:src="@drawable/zuma_button" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="380dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginTop="5dp"
                android:src="@drawable/zuma_button" />



        </LinearLayout>
    </ScrollView>

</RelativeLayout>